          </div>

          <div class="form-group field">
            <%= form.label :quantity, class: "control-label" %>
              <%= form.text_field :quantity, class: "form-control" %>
          </div>

          <div class="form-group field">
            <%= form.label :image %>
              <%= form.file_field :image %>
          </div>

          <div class="actions">
            <%= form.submit "Crear Moneda", class: "btn btn-primary" %>
          </div>
          <% end %>

  </div>
</div>