<div class="col-sm-12" align="center">
  <div class="container" style="width: 60%">


    <%= form_with(model: coin, local: true) do |form| %>
      <% if coin.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

          <ul>
            <% coin.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
              <% end %>
          </ul>
        </div>
        <% end %>

          <div class="form-group field">
            <%= form.label :name, class: "control-label" %>
              <%= form.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group field">
            <%= form.label :num_record, class: "control-label" %>
              <%= form.text_field :num_record, class: "form-control" %>
          </div>

          <div class="form-group field">
            <%= form.label :material, class: "control-label" %>
              <%= form.text_field :material, class: "form-control" %>
          </div>

          <div class="form-group field">
            <%= form.label :country, class: "control-label" %>
              <%= form.text_field :country, class: "form-control" %>
          </div>

          <div class="form-group field">
            <%= form.label :denomination, class: "control-label" %>
              <%= form.text_field :denomination, class: "form-control" %>
          </div>

          <div class="form-group field">
            <%= form.label :batch, class: "control-label" %>
              <%= form.text_field :batch, class: "form-control" %>
          </div>

          <div class="form-group field">
            <%= form.label :location, class: "control-label" %>
              <%= form.text_area :location, class: "form-control" %>
          </div>

          <div class="form-group field">
            <%= form.label :issuer, class: "control-label" %>
              <%= form.text_field :issuer, class: "form-control" %>
          </div>

          <div class="form-group field">
            <%= form.label :serial_number, class: "control-label" %>
              <%= form.text_field :serial_number, class: "form-control" %>
          </div>

          <div class="form-group field">
            <%= form.label :part_number, class: "control-label" %>
